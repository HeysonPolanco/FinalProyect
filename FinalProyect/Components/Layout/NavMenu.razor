@implements IDisposable
@inject NavigationManager NavigationManager

<div class="material-sidebar d-flex flex-column flex-shrink-0 p-3 text-white">

    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none justify-content-center">
        <i class="bi bi-ui-checks-grid fs-4 me-2"></i>
        <span class="fs-5 fw-bold font-monospace">FinalProyect</span>
    </a>

    <hr class="horizontal-light">

    <ul class="nav nav-pills flex-column mb-auto">

        <li class="nav-item">
            <NavLink class="nav-link text-white d-flex align-items-center" href="" Match="NavLinkMatch.All">
                <div class="icon-box shadow-primary text-center border-radius-xl me-2 d-flex align-items-center justify-content-center">
                    <i class="bi bi-house-door-fill"></i>
                </div>
                <span class="nav-link-text ms-1">Home</span>
            </NavLink>
        </li>

        <li class="nav-item">
            <NavLink class="nav-link text-white d-flex align-items-center" href="counter">
                <div class="icon-box bg-gradient-dark text-center border-radius-xl me-2 d-flex align-items-center justify-content-center">
                    <i class="bi bi-plus-square-fill"></i>
                </div>
                <span class="nav-link-text ms-1">Counter</span>
            </NavLink>
        </li>

        <li class="nav-item">
            <NavLink class="nav-link text-white d-flex align-items-center" href="weather">
                <div class="icon-box bg-gradient-dark text-center border-radius-xl me-2 d-flex align-items-center justify-content-center">
                    <i class="bi bi-cloud-sun-fill"></i>
                </div>
                <span class="nav-link-text ms-1">Weather</span>
            </NavLink>
        </li>

        <li class="nav-item">
            <NavLink class="nav-link text-white d-flex align-items-center" href="auth">
                <div class="icon-box bg-gradient-dark text-center border-radius-xl me-2 d-flex align-items-center justify-content-center">
                    <i class="bi bi-lock-fill"></i>
                </div>
                <span class="nav-link-text ms-1">Auth Required</span>
            </NavLink>
        </li>

        <li class="nav-item">
            <NavLink class="nav-link text-white d-flex align-items-center" href="historial">
                <div class="icon-box bg-gradient-dark text-center border-radius-xl me-2 d-flex align-items-center justify-content-center">
                    <i class="bi bi-table"></i>
                </div>
                <span class="nav-link-text ms-1">Historial</span>
            </NavLink>
        </li>

        <li class="nav-item mt-3">
            <h6 class="ps-4 ms-2 text-uppercase text-xs text-white font-weight-bolder opacity-8">Account</h6>
        </li>

        <AuthorizeView>
            <Authorized>
                <li class="nav-item">
                    <NavLink class="nav-link text-white d-flex align-items-center" href="Account/Manage">
                        <div class="icon-box bg-gradient-dark text-center border-radius-xl me-2 d-flex align-items-center justify-content-center">
                            <i class="bi bi-person-circle"></i>
                        </div>
                        <span class="nav-link-text ms-1">@context.User.Identity?.Name</span>
                    </NavLink>
                </li>

                <li class="nav-item">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />

                        <button type="submit" class="nav-link text-white d-flex align-items-center w-100 border-0 bg-transparent text-start">
                            <div class="icon-box bg-gradient-dark text-center border-radius-xl me-2 d-flex align-items-center justify-content-center">
                                <i class="bi bi-box-arrow-left"></i>
                            </div>
                            <span class="nav-link-text ms-1">Logout</span>
                        </button>
                    </form>
                </li>
            </Authorized>

            <NotAuthorized>
                <li class="nav-item">
                    <NavLink class="nav-link text-white d-flex align-items-center" href="Account/Register">
                        <div class="icon-box bg-gradient-dark text-center border-radius-xl me-2 d-flex align-items-center justify-content-center">
                            <i class="bi bi-person-plus-fill"></i>
                        </div>
                        <span class="nav-link-text ms-1">Register</span>
                    </NavLink>
                </li>

                <li class="nav-item">
                    <NavLink class="nav-link text-white d-flex align-items-center" href="Account/Login">
                        <div class="icon-box bg-gradient-dark text-center border-radius-xl me-2 d-flex align-items-center justify-content-center">
                            <i class="bi bi-box-arrow-in-right"></i>
                        </div>
                        <span class="nav-link-text ms-1">Login</span>
                    </NavLink>
                </li>
            </NotAuthorized>
        </AuthorizeView>

    </ul>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}