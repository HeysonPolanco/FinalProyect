@page "/arrendamiento"
@rendermode InteractiveServer

@using FinalProyect.Models
@using FinalProyect.Services

@inject ArrendamientoTerrenoService ArrService
@inject NavigationManager Nav

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h4 text-gray-800">Arrendamiento de Terreno en el Cementerio</h1>

    <div class="d-flex gap-2">
        <button class="btn btn-warning" @onclick="VerVencimientos">
            <i class="fas fa-bell"></i> Vencimientos
        </button>

        <button class="btn btn-primary" @onclick="CrearNuevo">
            <i class="fas fa-plus"></i> Nuevo Arrendamiento
        </button>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header">
        <strong>Listado de Arrendamientos</strong>
    </div>

    <div class="card-body p-0">

        @if (Lista == null)
        {
            <div class="p-3">Cargando...</div>
        }
        else if (Lista.Count == 0)
        {
            <div class="p-3">No hay registros.</div>
        }
        else
        {
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark text-white">
                    <tr>
                        <th>ID</th>
                        <th>Solicitante</th>
                        <th>Ubicación</th>
                        <th>Inicio</th>
                        <th>Vence</th>
                        <th>Metros²</th>
                        <th>Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Lista)
                    {
                        <tr class="@GetRowClass(item)">
                            <td>@item.Id</td>
                            <td>@item.Solicitante?.NombreCompleto</td>
                            <td>@item.Ubicacion</td>
                            <td>@item.FechaInicio.ToString("dd/MM/yyyy")</td>
                            <td>@item.FechaFin.ToString("dd/MM/yyyy")</td>
                            <td>@item.MetrosCuadrados</td>

                            <td class="text-center">
                                <div class="btn-group">

                                    <button class="btn btn-info btn-sm"
                                            @onclick="() => Ver(item.Id)">
                                        <i class="fas fa-eye"></i>
                                    </button>

                                    <button class="btn btn-warning btn-sm"
                                            @onclick="() => Editar(item.Id)">
                                        <i class="fas fa-edit"></i>
                                    </button>

                                    <button class="btn btn-success btn-sm"
                                            @onclick="() => GenerarRecibo(item.Id)">
                                        <i class="fas fa-receipt"></i>
                                    </button>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@code {

    private List<ArrendamientoTerreno>? Lista;

    protected override async Task OnInitializedAsync()
    {
        Lista = await ArrService.ObtenerTodos();
    }

    private void CrearNuevo() => Nav.NavigateTo("/arrendamiento/create");
    private void Ver(int id) => Nav.NavigateTo($"/arrendamiento/details/{id}");
    private void Editar(int id) => Nav.NavigateTo($"/arrendamiento/edit/{id}");
    private void GenerarRecibo(int id) => Nav.NavigateTo($"/recibo/create/{id}?proceso=arrendamiento");
    private void VerVencimientos() => Nav.NavigateTo("/arrendamiento/vencimientos");

    private string GetRowClass(ArrendamientoTerreno item)
    {
        if (item.FechaFin < DateTime.Now)
            return "table-danger";       // Vencido

        if ((item.FechaFin - DateTime.Now).TotalDays <= 30)
            return "table-warning";      // Por vencer

        return "";
    }
}
